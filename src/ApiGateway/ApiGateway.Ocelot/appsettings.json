{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Ocelot": "Information",
      "Microsoft.AspNetCore.Authentication": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Redis": "localhost:6379"
  },
  "IdentityServer": {
    "Authority": "https://localhost:5001",
    "ClientId": "booking.gateway",
    "ClientSecret": "gateway_super_secret_key_2024",
    "DefaultScopes": "booking.internal,inventory.api,bookings.api,users.api,payments.api",
    "RequireHttps": false,
    "TokenCacheDurationSeconds": 3600
  },
  "RateLimiting": {
    "GlobalLimit": 100,
    "WindowSizeInMinutes": 1,
    "QueueLimit": 20
  },
  "Caching": {
    "DefaultTtlInSeconds": 300,
    "Enabled": true
  },
  "Services": {
    "InventoryApi": "http://localhost:5002",
    "BookingApi": "http://localhost:5003", 
    "UserApi": "http://localhost:5004",
    "PaymentApi": "http://localhost:5005",
    "ReviewApi": "http://localhost:5006",
    "AnalyticsApi": "http://localhost:5007"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Ocelot": "Information",
        "Microsoft.AspNetCore.Authentication": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  }
}